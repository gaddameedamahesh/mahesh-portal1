pipeline {
    agent any
    tools {
        HEAD
        maven 'maven3'     // must match Global Tool name in Jenkins
        jdk 'java17'       // must match Global Tool name in Jenkins

        maven 'maven3'     // Jenkins → Global Tool Configuration
        jdk 'java17'       // Jenkins → Global Tool Configuration
    }

    environment {
        NEXUS_URL = 'http://18.212.239.48:8081/repository/mahesh-portal1/'
        SONAR_PROJECT_KEY = 'mahesh-portal1'
        e7cf60c (new commit)
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/gaddameedamahesh/mahesh-portal1.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        HEAD
        stage('Test') {
            steps {
                sh 'mvn test'

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=${SONAR_PROJECT_KEY}'
                }
        e7cf60c (new commit)
            }
        }

        stage('Upload to Nexus') {
            steps {
        HEAD
                sh 'cp target/*.war /opt/tomcat/webapps/'

                withCredentials([usernamePassword(credentialsId: 'nexus-credentials',
                                                 usernameVariable: 'NEXUS_USER',
                                                 passwordVariable: 'NEXUS_PASS')]) {
                    sh 'mvn deploy -DskipTests -Dnexus.user=$NEXUS_USER -Dnexus.password=$NEXUS_PASS'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'tomcat-credentials',
                                                 usernameVariable: 'TOMCAT_USER',
                                                 passwordVariable: 'TOMCAT_PASS')]) {
                    sh '''
                    curl -u $TOMCAT_USER:$TOMCAT_PASS \
                         --upload-file target/mahesh-portal.war \
                         "http://18.212.184.15:8080/manager/text/deploy?path=/mahesh-portal&update=true"
                    '''
                }
        e7cf60c (new commit)
            }
        }
    }

    post {
        success {
        HEAD
            archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            junit 'target/surefire-reports/*.xml'
        }
        failure {
            echo "Build failed. Please check logs."

            echo " Build, SonarQube analysis, Nexus upload, and Tomcat deployment completed successfully."
        }
        failure {
            echo " Build failed. Please check logs."
        e7cf60c (new commit)
        }
    }
}

