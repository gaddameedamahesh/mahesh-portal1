pipeline {
    agent any
    tools {
        maven 'maven3'     // must match Global Tool name in Jenkins
        jdk 'java17'       // must match Global Tool name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/gaddameedamahesh/mahesh-portal1.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cp target/*.war /opt/tomcat/webapps/'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            junit 'target/surefire-reports/*.xml'
        }
        failure {
            echo "Build failed. Please check logs."
        }
    }
}

