pipeline {
    agent any

    environment {
        MVN_HOME = tool name: 'maven3', type: 'maven'
        JAVA_HOME = tool name: 'java17', type: 'jdk'
        PATH = "${env.MVN_HOME}/bin:${env.JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/gaddameedamahesh/mahesh-portal1.git', 
                    credentialsId: 'maheshprojects-creds'
            }
        }

        stage('Build with Maven') {
            steps {
                sh "${MVN_HOME}/bin/mvn clean package"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('MySonarQubeServer') {
                    sh "${MVN_HOME}/bin/mvn sonar:sonar"
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-creds', usernameVariable: 'NEXUS_USER', passwordVariable: 'NEXUS_PASS')]) {
                    sh """
                        ${MVN_HOME}/bin/mvn deploy:deploy-file \
                        -DgroupId=devops \
                        -DartifactId=mahesh-portal \
                        -Dversion=1.0-SNAPSHOT \
                        -Dpackaging=war \
                        -Dfile=target/mahesh-portal.war \
                        -DrepositoryId=nexus \
                        -Durl=http://18.212.239.48:8081/repository/mahesh-portal1/ \
                        -Dusername=${NEXUS_USER} \
                        -Dpassword=${NEXUS_PASS}
                    """
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sh """
                    curl -u admin:admin123 \
                    -T target/mahesh-portal.war \
                    http://localhost:8080/manager/text/deploy?path=/mahesh-portal&update=true
                """
            }
        }
    }

    post {
        success {
            echo 'Build, Test, Sonar, Nexus deploy, and Tomcat deployment succeeded!'
        }
        failure {
            echo 'Build or Deployment failed. Check logs!'
        }
    }
}

