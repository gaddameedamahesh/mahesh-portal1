pipeline {
    agent any

    environment {
        MAVEN_HOME = '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/maven3'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/gaddameedamahesh/mahesh-portal1.git', credentialsId: 'maheshprojects-creds'
            }
        }

        stage('Build with Maven') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn clean package -DskipTests"
            }
        }

        stage('Upload to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-creds', usernameVariable: 'NEXUS_USER', passwordVariable: 'NEXUS_PSW')]) {
                    sh """
                        ${MAVEN_HOME}/bin/mvn deploy:deploy-file \
                        -DgroupId=devops \
                        -DartifactId=mahesh-portal \
                        -Dversion=1.0-SNAPSHOT \
                        -Dpackaging=war \
                        -Dfile=target/mahesh-portal.war \
                        -DrepositoryId=nexus \
                        -Durl=http://18.212.239.48:8081/repository/mahesh-portal1/ \
                        -Dusername=${NEXUS_USER} \
                        -Dpassword=${NEXUS_PSW}
                    """
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'tomcat-creds', usernameVariable: 'TOMCAT_USER', passwordVariable: 'TOMCAT_USER_PSW')]) {
                    sh """
                        curl --upload-file target/mahesh-portal.war \
                        --user ${TOMCAT_USER}:${TOMCAT_USER_PSW} \
                        http://18.212.184.15:8080/manager/text/deploy?path=/mahesh-portal&update=true
                    """
                }
            }
        }
    }

    post {
        failure {
            echo 'Build or deployment failed. Check logs!'
        }
        success {
            echo 'Build and deployment completed successfully!'
        }
    }
}

