pipeline {
    agent any

    tools {
        maven 'maven3'   // Jenkins Global Tool Config name
        jdk 'java17'     // Jenkins Global Tool Config name
    }

    environment {
        JAVA_HOME = "${tool 'java17'}"
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
        MVN_HOME = "${tool 'maven3'}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/gaddameedamahesh/mahesh-portal1.git'
            }
        }

        stage('Build') {
            steps {
                sh "${env.MVN_HOME}/bin/mvn clean install"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {
                    sh "${env.MVN_HOME}/bin/mvn sonar:sonar"
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                sh "${env.MVN_HOME}/bin/mvn deploy -DaltDeploymentRepository=nexus-repo::default::http://nexus-server/repository/maven-releases/"
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sh "cp target/mahesh-portal.war /opt/tomcat/webapps/"
                sh "/opt/tomcat/bin/shutdown.sh || true"
                sh "/opt/tomcat/bin/startup.sh"
            }
        }
    }

    post {
        success {
            echo 'Build, Test, Upload, and Deploy completed successfully!'
        }
        failure {
            echo 'Build failed. Check the logs!'
        }
    }
}

